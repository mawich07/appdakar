
<% content_for :estilos do %>
    <%= stylesheet_link_tag "backend/datepicker3", "backend/jquery.tagsinput", "backend/toastr.min" %>

<% end %>

<% content_for :contenido do %>
    <form action="/info/editar/" method="post">
    <div class="col-md-6">
      <div class="space20">
      </div>
      <div class="portlet box blue" style="border: none">

        <div class="portlet-body " style="padding: 30px">
          <!-- BEGIN FORM-->


            <div class="form-group">
              <label>Nombre de la empresa</label>
              <div class="input-group">
												<span class="input-group-addon">
												<i class="fa fa-building"></i>
												</span>
                <input name="nombre" value="<%= @info.nombre_empresa %>" class="form-control" placeholder="Nombre de la empresa" type="text">
              </div>
            </div>

            <div class="form-group">
              <label>Dirección</label>
              <div class="input-group">
												<span class="input-group-addon">
												<i class="fa fa-map-marker"></i>
												</span>
                <input name="direccion" value="<%= @info.direccion %>" class="form-control" placeholder="Dirección" type="text">
              </div>
            </div>
            <div class="form-group">
              <label>Email</label>
              <div class="input-group">
												<span class="input-group-addon">
												<i class="fa fa-envelope"></i>
												</span>
                <input name="email" value="<%= @info.email %>" class="form-control" placeholder="Email" type="text">
              </div>
            </div>
            <div class="form-group">
              <label>Teléfono convencional</label>
              <div class="input-group">
												<span class="input-group-addon">
												<i class="fa fa-phone"></i>
												</span>
                <input name="fijo" value="<%= @info.numero_fijo %>" class="form-control" placeholder="Teléfono convencional" type="text">
              </div>
            </div>
            <div class="form-group">
              <label>Teléfono móvil</label>
              <div class="input-group">
												<span class="input-group-addon">
												<i class="fa fa-mobile"></i>
												</span>
                <input name="movil" value="<%= @info.numero_movil %>" class="form-control" placeholder="Teléfono móvil" type="text">
              </div>
            </div>

          <!-- END FORM-->
        </div>
      </div>

    </div>

    <div class="col-md-6">
      <div class="space20">
      </div>

      <div class="portlet light">
        <div class="portlet-title">
          <div class="actions">

            <a title="" data-original-title="" href="#" class="btn btn-circle btn-default btn-icon-only fullscreen"></a>
          </div>
        </div>
        <div class="portlet-body">


            <div class="form-group">
              <label>Cómo llegar</label>
              <textarea name="c_llegar" class="form-control" rows="2"><%= @info.como_llegar %></textarea>
            </div>
            <div class="form-group">
              <label>Quiénes sómos</label>
              <textarea name="q_somos" class="form-control" rows="2"><%= @info.quienes_somos %></textarea>
            </div>
            <div class="form-group">
              <label>Trayectoria</label>
              <textarea name="trayectoria" class="form-control" rows="2"><%= @info.trayectoria %></textarea>
            </div>
            <div class="form-group">
              <label>Valores</label>
              <textarea name="valores" class="form-control" rows="2"><%= @info.valores %></textarea>
            </div>
            <div class="form-group">
              <label>Misión</label>
              <textarea name="mision" class="form-control" rows="2"><%= @info.mision %></textarea>
            </div>
            <div class="form-group">
              <label>Visión</label>
              <textarea name="vision" class="form-control" rows="2"><%= @info.vision %></textarea>
            </div>
            <div class="form-group">
              <label>Políticas de calidad</label>
              <textarea name="p_calidad" class="form-control" rows="2"><%= @info.politicas_calidad %></textarea>
            </div>


        </div>
      </div>

    </div>


    </div>
      <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6">
          <div class="pull-right" style="padding-right: 30px">
            <button type="submit" class="btn green">Guardar cambios</button></div>
        </div>
      </div>


    </form>
<% end %>

<% content_for :scripts do %>
    <%= javascript_include_tag "backend/toastr.min" %>

    <script type="text/javascript" charset="utf-8">
        $(function(){

            toastr.options = {
                "debug": false,
                "positionClass": "toast-top-right",
                "onclick": null,
                "showDuration": "3000",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            <% if @notif %>
            toastr.success("Información actualizada", "Transacción exitosa");
            <% end %>



        });
    </script>
<% end %>

<%= render template: "layouts/adminbase" %>