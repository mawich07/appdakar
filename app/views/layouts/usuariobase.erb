<script type="text/javascript" charset="utf-8">
    $(function () {
        $("#btnAcceder").click(function (){
            window.location = "/login/"
        });
        $("#btnRegistro").click(function (){
            window.location = "/registro/"
        });

        $("#btnLogout").click(function (){
            window.location = "/logout/"
        });
    });
</script>
<%= yield :inscripts %>

</body>
</html>
