<%= javascript_include_tag "backend/jquery.min", "backend/jquery-migrate.min", "backend/jquery-ui-1.10.3.custom.min",
                           "backend/bootstrap.min", "backend/bootstrap-hover-dropdown.min", "backend/jquery.slimscroll.min", "backend/jquery.blockui.min",
                           "backend/jquery.cokie.min", "backend/jquery.uniform.min", "backend/bootstrap-switch.min",
                           "backend/jquery.validate.min", "backend/metronic", "backend/layout", "backend/demo", "backend/login"
%>

<script>
    jQuery(document).ready(function() {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        Demo.init(); // init demo features
        Login.init();

        $("#enviar").click(function (){
            var email = $("#email").val();
            $.post( "/recuperarpass/"+email)
                    .done(function( data ) {
                        if (data.estado == "1" ){
                            $("#error").slideUp();
                            $("#correcto").slideDown();
                        }
                        else{
                            $("#error").slideDown();
                            $("#correcto").slideUp();
                        }
                    });
        });

    });
</script>
<!-- END JAVASCRIPTS -->
