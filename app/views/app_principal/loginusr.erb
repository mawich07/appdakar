<!-- BEGIN LOGIN -->
<div class="content">
  <!-- BEGIN LOGIN FORM -->
  <form class="login-form" action="/login/" method="post">
    <% if @notif then %>
        <div class="alert alert-success">
          <strong>Listo!</strong> Inicia sesión con tu nueva contraseña.
        </div>
    <% end %>
    <h3 class="form-title">Accede a tu cuenta</h3>
    <div class="alert alert-danger display-hide">
      <button class="close" data-close="alert"></button>
			<span>
			Rellena los campos. </span>
    </div>
    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <label class="control-label visible-ie8 visible-ie9">Cédula</label>
      <div class="input-icon">
        <i class="icon-user"></i>
        <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Cédula" name="cedula" autofocus/>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Contraseña</label>
      <div class="input-icon">
        <i class="icon-lock"></i>
        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Contraseña" name="password"/>
      </div>
    </div>
    <div class="form-actions">
      <label class="checkbox">
      </label>
      <button type="submit" class="btn green pull-right">
        Acceder <i class="icon-arrow-right m-icon-white"></i>
      </button>
    </div>

    <div class="forget-password">
      <h4>Olvidaste la contraseña ?</h4>
      <p>
        entra <a href="javascript:;" id="forget-password">
        aquí </a>
        para cambiarla.
      </p>
    </div>
  </form>
  <!-- END LOGIN FORM -->
  <!-- BEGIN FORGOT PASSWORD FORM -->
  <form class="forget-form">
    <h3>Olvidaste la contraseña ?</h3>
    <p>
      Ingresa tu email para resetear tu contraseña.
    </p>
    <div class="form-group">
      <div class="input-icon">
        <i class="icon-envelope"></i>
        <input id="email" class="form-control placeholder-no-fix" type="text" placeholder="Email" name="email"/>
      </div>
      <div id="error" style="display: none" class="alert alert-danger">
        <strong>Error!</strong> Este correo electrónico no está registrado.
      </div>
      <div id="correcto" style="display: none" class="alert alert-success">
        <strong>Listo!</strong> Revisa tu bandeja de entrada, se han enviado los pasos para la recuperación de la contraseña.
      </div>
    </div>
    <div class="form-actions">
      <button type="button" id="back-btn" class="btn">
        <i class="icon-arrow-left"></i> Atrás </button>
      <button id="enviar" type="button" class="btn green pull-right">
        Enviar <i class="icon-arrow-right"></i>
      </button>
    </div>
  </form>
  <!-- END FORGOT PASSWORD FORM -->

</div>
<!-- END LOGIN -->
