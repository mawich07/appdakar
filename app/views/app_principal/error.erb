<script>
    jQuery(document).ready(function() {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        Demo.init(); // init demo features
        Login.init();

        $("#enviar").click(function (){
            var email = $("#email").val();
            $.post( "/recuperarpass/"+email)
                    .done(function( data ) {
                        if (data.estado == "1" ){
                            $("#error").slideUp();
                            $("#correcto").slideDown();
                        }
                        else{
                            $("#error").slideDown();
                            $("#correcto").slideUp();
                        }
                    });
        });

    });
